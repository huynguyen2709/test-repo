extends ../layouts/common
block content 

    h1 
        span() Users 
        a(href='/users/create',class='btn btn-primary ml-2') New 

    div(class='d-flex align-items-center')   
        form(action="/users/search", method='GET', class='d-flex ml-auto') 
            input(type='text', name='q',class='form-control')
            button(class='btn btn-primary ml-2') search

    table(class='table')
        tr 
            th Avatar
            th Name 
            th Phone
            th Action 
        each user in users 
            tr 
                td 
                    img(src=`/${user.avatar}`, width='32' )
                td= user.name 
                td= user.phone
                td 
                    a(href="/users/" + user.id, class='btn btn-light') View 